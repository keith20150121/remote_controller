    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="yang.linzhen.remotecontrol.MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main_fragment">

